<Page
    x:Class="Recipe_Book.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Recipe_Book"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="988.764">
    <StackPanel Padding="50" Orientation="Vertical" Background="WhiteSmoke" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Button x:ConnectionId='2' Name="InsertRecipe" Content="Добави Рецепта" FontSize="100" Width="1500" Padding="20" Margin="0,100,0,50"  HorizontalAlignment="Center" VerticalAlignment="Stretch" Height="200"/>

        <Button x:ConnectionId='3' Name="SearchRecipe" Content="Търси Рецепта" FontSize="100" Width="1500" Padding="20" Margin="0,0,0,50"  HorizontalAlignment="Center" VerticalAlignment="Stretch" Height="200" />

        <Button x:ConnectionId='4' Name="FavoriteRecipies" Content="Любими" FontSize="100" Width="1500"  Padding="20" Margin="0,0,0,0"  HorizontalAlignment="Center" VerticalAlignment="Stretch" Height="200" />
    </StackPanel>
</Page>

