<Page
    x:Class="Recipe_Book.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Recipe_Book"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="988.764">

    <StackPanel Orientation="Vertical">
        <RelativePanel>
            <Button x:ConnectionId='9' Name="Menu_button" Height="60" Width="60" Padding="0" Background="Transparent"                          >
                <Image Source="/../../Assets/Images/menu_button.png"/>
            </Button>
        </RelativePanel>
        <StackPanel Orientation="Horizontal">
            <SplitView x:ConnectionId='2' Name="MenuSplitView" 
                   DisplayMode="CompactInline" 
                   OpenPaneLength="200" 
                   CompactPaneLength="60" 
                   HorizontalAlignment="Left">
                <SplitView.Pane>
                    <ListBox x:ConnectionId='4' SelectionMode="Single" Name="PagesListBox"                                                 >
                        <ListBoxItem x:ConnectionId='5' Name="HomePageItem" Height="60">
                            <StackPanel Orientation="Horizontal">
                                <Image/>
                                <TextBlock Text="abc"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:ConnectionId='6' Name="LookupPageItem" Height="60">
                            <StackPanel Orientation="Horizontal">
                                <Image/>
                                <TextBlock Text="abc"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:ConnectionId='7' Name="CreatePageItem" Height="60">
                            <StackPanel Orientation="Horizontal">
                                <Image/>
                                <TextBlock/>
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                </SplitView.Pane>
                <SplitView.Content>
                    <TextBlock x:ConnectionId='8' Name="ResultTextBlock"/>
                </SplitView.Content>
            </SplitView>
            <Frame x:ConnectionId='3' Name="MainFrame">

            </Frame>
        </StackPanel>
    </StackPanel>
</Page>

